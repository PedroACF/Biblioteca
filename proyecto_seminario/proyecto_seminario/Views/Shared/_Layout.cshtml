<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/estilo.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.uploadify-3.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/tiny_mce/tiny_mce.js")" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $(".cosa div img").each(function () {
                $(this).load(function () {
                    var difx = ($(this).width() - 80) / 2;
                    var dify = ($(this).width() - 110) / 2;
                    $(this).css("margin-left", -difx);
                    $(this).attr("origiw", $(this).width());
                    $(this).attr("origih", $(this).height());
                    $(this).attr("mw", difx);
                    $(this).attr("mh", dify);
                });
                $(this).hover(function () {
                    var mw = 50;
                    var w = Number($(this).attr("origiw")) + 100;
                    var h = Number($(this).attr("origih")) + 100;
                    $(this).dequeue();
                    $(this).animate({ "width": w,"height":h, "margin-left": "+=-" + mw}, 500);
                },
                function () {
                    var w = Number($(this).attr("origiw"));
                    var h = Number($(this).attr("origih"));
                    var mw = Number($(this).attr("mw"));
                    var mh = Number($(this).attr("mh"));
                    $(this).dequeue();
                    $(this).animate({ "width": w, "height": h, "margin-left": -mw, "margin-top": -mw }, 500);
                });
            });
        });
    </script>
</head>
<body>
		<div id="borde">
			<div id="contenedor">
				<div id="cabecera"><img src="../micabecera.jpg" width="850" height="106" alt="Web opcional" border="0"/></div>
				<div id="navegador">
				    
					@Html.ActionLink("Home", "Index", "Home") |
                    @Html.Partial("_LogOnPartial") |
					@Html.ActionLink("Acerca de", "About", "Home")
					
                    
				</div> 	
                 @RenderBody()
				<div id="pie">
					Maqueta base
				</div>
			</div>
		</div>
	</body>
</html>
