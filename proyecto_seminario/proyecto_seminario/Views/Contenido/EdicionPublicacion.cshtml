<h2>Publicar @ViewBag.lista.titulo</h2>

<div id="valor">

<b>Observaciones:</b> @ViewBag.observaciones<br />

@using (Html.BeginForm())
{
<b>    
    <input type="hidden" name="tipo" value="@ViewBag.titulo"/>
    <table>
        
        <tr><td>Titulo: </td><td><input type="text" name="titulo" value="@ViewBag.lista.titulo"/></td></tr>
        <tr><td>Categoria: </td><td>@Html.TextBox("categoria")</td></tr> 
        <tr><td>Descripcion: </td><td><textarea id="descripcion" name="descripcion">@ViewBag.lista.descripcion</textarea></td></tr>
        
    
    </table>
    </b>
    <textarea id="ckeditor" name="ckeditor" class="ckeditor"> 
        @Html.Raw(ViewBag.lista.text)
    </textarea>
    <br/>
    <input type="hidden" name="id" value="@ViewBag.id" />
    <input type="submit" value="Publicar" />
}
</div>
