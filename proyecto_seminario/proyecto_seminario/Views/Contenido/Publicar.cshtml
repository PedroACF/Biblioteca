<div id="valor">
<h2>Publicar @ViewBag.titulo</h2>
@using (Html.BeginForm())
{
    
    <input type="hidden" name="tipo" value="@ViewBag.titulo"/>
    <table>
        
        <tr><td><b>Titulo:</b> </td><td>@Html.TextBoxFor(m => m.titulo)</td></tr>
        <tr><td><b>Categoria:</b> </td><td>@Html.TextBoxFor(m=>m.categoria)</td></tr> 
        <tr><td><b>Descripcion:</b> </td><td>@Html.TextAreaFor(m=>m.descripcion)</td></tr>
        
    
    </table>
    <textarea id="ckeditor" class="ckeditor" name="ckeditor"> 

    </textarea>
    <br/>
    <input type="submit" value="Publicar" />
}
</div>
