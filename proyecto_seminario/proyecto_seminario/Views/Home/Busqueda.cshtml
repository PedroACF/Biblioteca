						<div id="fbuscar" class="cuerpolateral">
						@using (Html.BeginForm("busqueda","Home"))  {
							<div id="campotexto"><input type="text" name="criterio" value="criterio"/></div>
                            <div id="campotexto"><select name="porque"><option value="*">Todos</option><option value="Articulo">Articulo</option><option value="Curso">Curso</option><option value="Libro">Libro</option><option value="Tutorial">Tutorial</option></select></div>
